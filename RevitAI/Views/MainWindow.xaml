<Window x:Class="RevitAI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevitAI.Views"
        mc:Ignorable="d"
        Title="Revit AI Tools" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Revit AI 工具箱" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Grid.Row="1" Content="打开 AI 助手" Command="{Binding OpenInputWindowCommand}" Margin="0,10" Height="40"/>
        <Button Grid.Row="2" Content="打开 Revit 族浏览器" Command="{Binding OpenRevitFamilyViewCommand}" Margin="0,10" Height="40"/>
    </Grid>
</Window>
